[Unit]
Description=Frontend Service
After=network.target

[Service]
Type=exec
User={{ service_user }}
Group={{ group_user }}
ExecStart=/usr/bin/http-server /opt/sausage-store/static/dist/frontend/ -p 80 --proxy http://localhost:8080
Restart=on-failure

[Install]
WantedBy=multi-user.target
